// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  password      String
  name          String?
  role          String         @default("MEMBER")
  organizationId String
  organization  Organization   @relation(fields: [organizationId], references: [id])
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  requests      Request[]      @relation("RequestCreator")
  auditLogs     AuditLog[]

  @@map("users")
}

model Organization {
  id        String    @id @default(cuid())
  name      String
  createdAt DateTime  @default(now())
  users     User[]
  requests  Request[]
  workflowSteps ApprovalWorkflowStep[]

  @@map("organizations")
}

model Request {
  id             String         @id @default(cuid())
  title          String
  description    String
  status         String         @default("PENDING")
  currentStep    Int            @default(1)
  organizationId String
  organization   Organization   @relation(fields: [organizationId], references: [id])
  createdById    String
  createdBy      User           @relation("RequestCreator", fields: [createdById], references: [id])
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  approvalSteps  ApprovalStep[]
  auditLogs      AuditLog[]

  @@map("requests")
}

model ApprovalStep {
  id           String       @id @default(cuid())
  requestId    String
  request      Request      @relation(fields: [requestId], references: [id], onDelete: Cascade)
  stepNumber   Int
  requiredRole String
  status       String       @default("PENDING")
  approvedById String?
  approvedAt   DateTime?
  createdAt    DateTime     @default(now())

  @@unique([requestId, stepNumber])
  @@map("approval_steps")
}

model ApprovalWorkflowStep {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  stepNumber     Int
  requiredRole   String
  createdAt      DateTime     @default(now())

  @@unique([organizationId, stepNumber])
  @@map("approval_workflow_steps")
}

model AuditLog {
  id         String   @id @default(cuid())
  entityType String
  entityId   String
  action     String
  actorId    String
  actor      User     @relation(fields: [actorId], references: [id])
  requestId  String?
  request    Request? @relation(fields: [requestId], references: [id])
  metadata   String?
  timestamp  DateTime @default(now())

  @@index([entityType, entityId])
  @@index([requestId])
  @@map("audit_logs")
}
